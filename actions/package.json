{
  "name": "deployment-actions",
  "version": "0.1.0",
  "private": true,
  "description": "Collection of actions useful for apps deployment",
  "scripts": {
    "build:modify-chart-values": "ncc build -s --no-source-map-register src/modify-chart-values-action.ts -o lib/modify-chart-values-action",
    "build": "concurrently 'npm:build:modify-chart-values'",
    "test": "ava src/**.test.ts --serial --verbose",
    "lint": "tsc && eslint 'src' --max-warnings 0",
    "lint-fix": "eslint --fix 'src'"
  },
  "dependencies": {
    "@actions/core": "^1.8.2",
    "del": "^6.1.0",
    "yaml": "2.1.1"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@trivago/prettier-plugin-sort-imports": "3.3.0",
    "@types/node": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "@vercel/ncc": "^0.33.4",
    "ava": "4.3.1",
    "concurrently": "^7.2.1",
    "eslint": "8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "ts-node": "^10.8.0",
    "typescript": "4.7.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "no-duplicate-imports": "warn",
      "no-console": "warn"
    }
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "all",
    "importOrder": [
      "<THIRD_PARTY_MODULES>",
      "^[./]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
  }
}
